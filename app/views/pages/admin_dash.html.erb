<div class="container">
  <% if logged_in?(:admin) %>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.each do |user| %>
          <% if user.id != current_user.id %>
            <h2><%= user.email %></h2>
            <h4><strong>Current Role: </strong><%= user.roles.first.capitalize %></h4>
            <%= link_to "Edit User Role", edit_user_path(user) %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You are not authorized to view this page.</p>
  <% end %>
</div>
<div>
  <%= link_to "back", root_path %>
</div>